{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "airbnb",
    "airbnb/hooks",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-native", "react-hooks"],
  "rules": {
    "react-hooks/exhaustive-deps": "warn"
  },
  "ignorePatterns": ["node_modules/", "android/", "ios/", "build/", "*.js"]
}
